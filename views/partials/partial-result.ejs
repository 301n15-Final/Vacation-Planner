<% if(typeof name === 'undefined') { %>
  <h2 id="trip-name">Your trip to <%= city %> <br>
    <%= request.start_date %> - <%= request.end_date %></h2>
<% } else { %>
  <h2 id="trip-name"><%= name %></h2>
<% } %>

  <h3>More information about your destination:</h3>

  <div class="country-info flex-column">
    <img src="<%= countryData.flag_url %>" alt="flag of <%= countryData.country %>">
    <ul>
      <li><b>Country: </b><%= country %></li>
      <li><b>Capital: </b><%= countryData.capital %> </li>
      <li><b>Population: </b><%= countryData.population %></li>
      <li><b>Borders: </b><%= countryData.borders %></li>
      <li><b>Currencies: </b><%= countryData.currencies %></li>
      <li><b>Languages: </b><%= countryData.languages %></li>
    </ul>
  </div>

  <% if(typeof weather !== 'undefined') { %>
    <h3>For the dates of your trip we expect:</h3>
    <ul>
      <% weather.forEach( day => { %>
        <li><img class="icon" src="<%= day.icon_url %>" alt="weather icon"> <%= day.day %>: <%= day.summary %> With the average temperature of: <%= day.temperature %> &deg;F</li>
      <% }) %>
    </ul>
  <% } %>

  <h3>For your trip we suggest you to bring:</h3>
<ul class="items">
  <% items.forEach( item => { %>
  <li><input type="checkbox"> <%= item %></li>
  <% }) %>
</ul>