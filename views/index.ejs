<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
</head>
<body>
  <header class="flex-row">
    <%- include('./partials/header.ejs') %>
  </header>
  <main class="flex-column">
    <section class="main-content flex-column">
      <h2>Welcome to the Vacation Planner!</h2>
      <h3>Our Mission:</h3>
      <p>
        Blah-blah-blah to help you blah-blah-blah
      </p>
      <h3>How to:</h3>
      <p>Blah-blah-blah click here to start</p>
      <button id="start" class="button">START</button>
    </section>
    <section class="modal">
      <div class="modal-content">
        <form class="flex-column" action="/" %> method="POST">
          <label for="city">Enter the location</label>
          <input class="input" type="text" name="city" placeholder="Enter city of your destination" required>
          <label for="start_date">Enter start date of your vacation</label>
          <input class="input" type="date" name="start_date" required>
          <label for="end_date">Enter end date of your vacation</label>
          <input class="input" type="date" name="end_date" required>
          <label for="vacation_type"></label>
          <select class="input" name="vacation_type" >
            <option value="staycation">staycation</option>
            <option value="long_vacation">long_vacation</option>
          </select>
          <label for="activities">Pick the activities you're planning on doing</label>
          <select class="input" name="activities">
            <option value="hiking">hiking</option>
            <option value="swimming">swimming</option>
          </select>

          <section id="temp-preference">
            <div class="slide-container">
              <input type="range" min="1" max="100" value="50" class="slider" id="winter-high">
              <p id="winter-ends-at"></p>
            </div>

            <div class="slide-container">
              <input type="range" min="1" max="100" value="65" class="slider" id="summer-low">
              <p id="summer-starts-at"></p>
            </div>
          </section>

          <button type="submit" class="button">SUBMIT</button>
        </form>
      </div>
    </section>
  </main>
  <footer class="flex-column">
    <%- include('./partials/footer.ejs') %>
    <script src="../js/modal.js"></script>
    <script src="../js/app.js"></script>
  </footer>
</body>
</html>